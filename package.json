{
  "name": "electron-nuxt-ssr",
  "version": "2.0.0",
  "description": "Electron + Nuxt 4 SSR example",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "electron .",
    "dev:nuxt": "nuxt dev --port 3235",
    "build": "nuxt build && pnpm run build:electron",
    "build:electron": "esbuild electron/main.ts --bundle --platform=node --format=esm --outfile=dist-electron/main.js --external:electron",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "lint": "eslint . --fix && stylelint \"app/**/*.{vue,scss}\"",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run build"
  },
  "dependencies": {
    "@nuxt/icon": "^2.1.1",
    "@nuxt/ui": "^4.3.0",
    "@vueuse/core": "^14.1.0",
    "es-toolkit": "^1.43.0",
    "nuxt": "^4.0.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.82",
    "@nuxt/eslint": "^1.12.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "electron": "^39.2.7",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0"
}
